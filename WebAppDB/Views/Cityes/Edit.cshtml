@model WebAppDB.Models.City
@{
    ViewData["Title"] = "Edit List";
}
<h1>Edit List</h1>


<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CityID" />
            <div class="form-group">
                <label asp-for="CityName" class="control-label"></label>
                <input asp-for="CityName" class="form-control" />
                <span asp-validation-for="CityName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CountryName"></label>
                <input asp-for="CountryName" list="CountryList" />
                <span asp-validation-for="CountryName"></span>
            </div>

            <div class="form-group">
                <datalist id="CountryList">
                    <option value="Iraq">Iraq</option>
                    <option value="Iran">Iran</option>
                    <option value="USA">USA</option>
                    <option value="UK">UK</option>
                </datalist>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}