@model WebAppDB.Models.Language
@{
    ViewData["Title"] = "Edit Language List";
}
<h1>Edit LanguageList</h1>


<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="LanguageID " />

            <div class="form-group">
                <label asp-for="LanguageName"></label>
                <input asp-for="LanguageName" list="CountryList" />
                <span asp-validation-for="LanguageName"></span>
            </div>

            <div class="form-group">
                <datalist id="CountryList">
                    <option value="Arabic">Arabic</option>
                    <option value="English">English</option>
                    <option value="Swedish">Swedish</option>

                </datalist>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}